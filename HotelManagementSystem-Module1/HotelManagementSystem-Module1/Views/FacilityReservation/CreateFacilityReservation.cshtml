                },
                pax: {
                    required: true
                },
                startTime: {
                    required: true,
                },
                endTime: {
                    required: true,
                    greaterStart: "#startTime"
                },
                hourSelected: {
                    required: true,
                }
            },
            messages: {
                guestId: "Please enter the guest name",
                facilityType: {
