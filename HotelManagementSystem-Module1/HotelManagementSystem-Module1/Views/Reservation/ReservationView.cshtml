@using HotelManagementSystem_Module1.Domain.Models
@using System.Collections
@{
    ViewData["Title"] = "Reservation";
    ViewBag.Title = "Reservation";
    ArrayList mainList = ViewBag.mainList;
    IEnumerable<Guest> guestList = ViewBag.guestList as IEnumerable<Guest>;

    int flag = ViewBag.flag;
    string guestName = "";
    string guestEmail = "";
    string guestType = "";
    string guestPassport = "";

    if (flag == 0)
    {
        guestName = ViewBag.GuestName;
        guestEmail = ViewBag.GuestEmail;
        guestType = ViewBag.GuestType;
        guestPassport = ViewBag.GuestPassport;
    }
}

@if (flag == 1)
{
    <div class="text-center">
        <span class="display-4">All Existing Guest Reservations</span>
    </div>
}
else if (flag == 0)
{
    <div class="text-center">
        <span class="display-4">Reservation Record(s)</span>
    </div>

    <!-- Insert Guest Information Card here! -->
    @guestName
    @guestEmail
    @guestType
    @guestPassport
}

<div class="text-nowrap">
    <table id="reservationtb" class="table table-bordered" cellspacing="0" width="100%">
        <thead class="thead-dark">
            <tr>
                @if (flag == 0)
                {
                    <th>Reservation ID</th>
                    <th>No. of Guest</th>
                    <th>Room Type</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Last Modified</th>
                    <th>Status</th>
                    <th></th>
                }
                else if (flag == 1)
                {
                    <th>Reservation ID</th>
                    <th>Guest Name / Email</th>
                    <th>No. of Guest</th>
                    <th>Room Type</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Status</th>
                }
            </tr>
        </thead>
        <tbody>
            @if (flag == 0)
            {
                @foreach (String[] data in mainList)
                {
                    <tr>
                        <td>
                            <a href="@Url.Action("UpdateReservation", "ReservationManagement", new { resId = data[0] })">
                                @data[0]
                            </a>
                        </td>
                        <td>@data[1]</td>
                        <td>@data[2]</td>
                        <td>@data[3]</td>
                        <td>@data[4]</td>
                        <td>@data[5]</td>
                        <td>@data[6]</td>
                        <td><button type="button" class="btn btn-secondary btn-sm">View</button></td>
                    </tr>
                }
            }
            else if (flag == 1)
            {
                foreach (string[] data in mainList)
                {
                    <tr>
                        <td style="text-decoration: underline">
                            <a href="@Url.Action("UpdateReservation", "ReservationManagement", new {resId = data[0]})">
                                <b>@data[0]</b>
                            </a>
                        </td>
                        <td style="text-decoration: underline">
                            <a href="@Url.Action("ReservationView", "Reservation", new {GuestId = data[1]})">
                                <b>
                                    @data[2] / <br />
                                    @data[3]
                                </b>
                            </a>
                        </td>
                        <td>@data[4]</td>
                        <td>@data[5]</td>
                        <td>@data[6]</td>
                        <td>@data[7]</td>
                        <td>@data[8]</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<input class="btn btn-primary" style="width:300px;" type="submit" value="Create Reservation" onclick="window.location= '@Url.Action( "guestSelection", "ReservationCreation")'" />
@section Scripts {
    @{await Html.RenderPartialAsync("_DatatableScriptsPartial");
        <script type="text/javascript">
            $(document).ready(function () {
                $('#reservationtb').DataTable({
                    "scrollX": true,
                    "scrollY": "70vh",
                    "scrollCollapse": true
                });
                $('.dataTables_length').addClass('bs-select');
            });
        </script>
    }
}
