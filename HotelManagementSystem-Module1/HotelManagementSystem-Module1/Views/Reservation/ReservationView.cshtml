@using HotelManagementSystem_Module1.Domain.Models
@using System.Collections
@{
    ViewData["Title"] = "Reservation";
    ViewBag.Title = "Reservation";
    ArrayList mainList = ViewBag.mainList;
    IEnumerable<Guest> guestList = ViewBag.guestList as IEnumerable<Guest>;
}

<div class="text-center">
    <span class="display-4">All Existing Guest Reservations</span>
</div>

<div class="text-nowrap">
    <table id="reservationtb" class="table table-bordered" cellspacing="0" width="100%">
        <thead class="thead-dark">
            <tr>
                <th>Reservation ID</th>
                <th>Guest Name</th>
                <th>Guest Email</th>
                <th>No. of Guest</th>
                <th>Room Type</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Last Modified</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (String[] data in mainList)
            {
                <tr>
                    <td><a href="@Url.Action("UpdateReservation", "ReservationManagement", new { resId = data[0] })">
                        @data[0]</a></td>
                    <td>
                        <a href="@Url.Action("GuestReservationRecord", "Reservation", new { GuestId = data[1] })">
                            @data[2]</a>
                    </td>
                    <td>@data[3]</td>
                    <td>@data[4]</td>
                    <td>@data[5]</td>
                    <td>@data[6]</td>
                    <td>@data[7]</td>
                    <td>@data[9]</td>
                    <td>@data[12]</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<input style="width:300px;" type="submit" value="Create Reservation" onclick="window.location= '@Url.Action( "CreateReservation", "ReservationCreation")'" />
@section Scripts {
    @{await Html.RenderPartialAsync("_DatatableScriptsPartial");
        <script type="text/javascript">
            $(document).ready(function () {
                $('#reservationtb').DataTable({
                    "scrollX": true,
                    "scrollY": "70vh",
                    "scrollCollapse": true
                });
                $('.dataTables_length').addClass('bs-select');
            });
        </script>
    }
}
